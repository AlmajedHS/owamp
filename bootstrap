#	Date:		Wed Apr 17 13:15:07 EDT 2002
#
#	Description:	
#			This script is used to bootstrap the autobuild
#			process.
#

if test -x I2util/bootstrap; then
	echo
	echo "## I2util/bootstrap"
	echo
	cd I2util
	./bootstrap
	cd ..
	echo
	echo "## Finished I2util/bootstrap"
	echo
fi

set -x
aclocal -I config
autoheader
automake --foreign --add-missing --copy
autoconf
./configure $*
